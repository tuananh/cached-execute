{
    "extends": ["airbnb-base", "prettier"],
    "plugins": ["prettier"],
    "rules": {
        "eqeqeq": ["warn"],
        "radix": ["warn"],
        "newline-per-chained-call": ["warn"],
        "no-restricted-syntax": ["warn"],
        "import/no-dynamic-require": ["warn"],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": false,
                "tabWidth": 4
            }
        ]
    }
}
